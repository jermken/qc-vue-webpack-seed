{
    "compilerOptions": {
        "module": "esNext",
        "target": "es5",
        "strict": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "allowJs": true,
        "experimentalDecorators": true,
        "lib": ["dom",
            "es5",
            "es6",
            "es7",
            "es2015.promise"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "~@/*": ["./src/components/*"],
            "~lib@/*": ["/src/js/lib/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./tsconfig.json"
    ]
}